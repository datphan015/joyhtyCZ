<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"
            android:textSize="45dp"
            android:text="Sản Phẩm" />

        <ImageView
            android:id="@+id/item_xemgiohang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/baseline_shopping_cart_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_centerVertical="true"
            android:id="@+id/img2"
            app:civ_border_width="2dp"
            android:layout_marginTop="50dp"
            app:civ_border_color="#ff000000"/>

        <TextView
            android:id="@+id/chosetextC"
            android:text="@string/chose_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            />



        <TextView
            android:id="@+id/pricetextC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            android:text="@string/price_chose" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            >

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableStart="@drawable/baseline_indeterminate_check_box_24" />

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="44dp"
                android:layout_height="34dp"
                android:gravity="center"
                android:text="1" />

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableStart="@drawable/baseline_add_box_24" />

            <TextView
                android:id="@+id/tvBuy"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:background="#71C3BB"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>